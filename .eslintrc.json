{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "off",
      {
        "singleQuote": true,
        "semi": false,
        "endOfLine": "auto",
        "arrowParens": "avoid",
        "trailingComma": "es5"
      }
    ],
    "spaced-comment": "off",
    "no-console": "off",
    "consistent-return": "off",
    "func-names": "off",
    "object-shorthand": "off",
    "no-process-exit": "off",
    "no-param-reassign": "off",
    "no-return-await": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "prefer-destructuring": ["error", { "object": true, "array": false }],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "req|res|next|val" }],
    "linebreak-style": "off",
    "linebreak": "off",
    "semi": "off",
    // "comma-style": ["error", { "exceptions": { "FunctionExpression": false } }],
    "node/no-unsupported-features/es-syntax": [
      "error",
      {
        "version": ">=9.0.0"
      }
    ]
  }
}
